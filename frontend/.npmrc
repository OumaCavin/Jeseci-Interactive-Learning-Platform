# NPM Configuration for JAC Learning Platform
# Author: Cavin Otieno

# Allow installing packages even if there are peer dependency conflicts
legacy-peer-deps=true

# Set cache directory (use default to avoid permission issues)
cache=/home/cavin/.npm

# Enable progress reporting
progress=true

# Use verbose output for debugging
loglevel=info

# Set timeout for network requests
fetch-timeout=300000

# Set retries for failed requests
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Set audit level
audit-level=moderate